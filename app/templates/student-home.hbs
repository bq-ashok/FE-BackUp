<div class="controller student-landing container-fluid">
  {{gru-take-tour steps=steps containerClass='home-tour'}}
  <div class="student-left-panel">
    <div class="greetings">
      <div class="title">
        <span>{{t 'user.hello' name=profile.firstName}}</span>
      </div>
      {{#unless (gt loginCount 5)}}
        <div class="featured-courses pull-right">
          <span>{{t 'student-landing.browse-our'}} {{#link-to 'library'}}{{t 'student-landing.featured-courses'}}{{/link-to}}</span>
        </div>
      {{/unless}}
    </div>
    {{#unless (gt loginCount 5)}}
      {{gru-student-featured-courses
        courses=featuredCourses
        profile=profile
        loginCount=loginCount
      }}
    {{/unless}}
    <div class="student-navigator">
      <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active active-classes tab hidden-xs">
          {{#link-to 'student-home'}}
            <span class="lead">{{t 'user.classrooms'}}</span>
          {{/link-to}}
        </li>
        <li role="presentation" class="independent-learning tab hidden-xs">
          {{#link-to 'student-independent-learning.learning-base'}}
            <span class="lead">{{t 'user.independent-learning'}}</span>
          {{/link-to}}
        </li>
      </ul>
    </div>
    <div class="content">
      {{cards.gru-join-class-card
        onJoinClass="joinClass"
        validCode=validCode
        notMember=notMember
        allowedCode=allowedCode
        isLoading=isLoading}}
      {{#if hasClasses}}
        {{#each activeClasses as |class|}}
          {{cards.gru-student-class-card
            class=class
            onPlayCollection='studyPlayer'
            onItemSelected='selectMenuItem'}}
        {{/each}}
      {{/if}}
    </div>
  </div>
</div>
