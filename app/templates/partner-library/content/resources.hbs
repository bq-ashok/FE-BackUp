<div class="controller content-resources">
    <div class="resources clearfix col-xs-12">
      {{#each resources as |resource|}}
          <div class="card col-lg-3 col-sm-4 col-xs-6">
            {{new-cards.gru-resource-card
              resource=resource
              onRemixQuestion="remixQuestion"
              onPlayResource="playResource"
              profile=sessionProfile
              addEnabled=true
              editEnabled=false
              partnerLibrary=true
              isOnProfile=true}}
          </div>
      {{else}}
        <div class="no-content panel add-content panel-default">
          <div class="panel-body">
            {{gru-icon name='explore'}}
            <p>{{{t "common.no-resources-to-display"}}}</p>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="col-xs-12">
      {{#if showMoreResultsButton}}
        <span class="show-more-results" {{action 'showMoreResults'}}>{{t "common.show-more-results"}}</span>
      {{/if}}
    </div>
</div>
