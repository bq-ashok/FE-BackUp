<div class="controller content-collections">
  <div class="collections">
    {{#each collections as |collection|}}
      <div class="card">
        {{new-cards.gru-standard-card
          profile=sessionProfile
          isOnProfile=true
          cardSize="md"
          content=collection
          onOpenIndependentPlayer="playIndependentContent"
          onOpenContentPlayer="openContentPlayer"
          onBookmarkContent="onBookmarkContent"
        }}
      </div>
    {{else}}
      <div class="no-content panel add-content panel-default">
        <div class="panel-body">
          {{gru-icon name='explore'}}
          <p>{{{t "common.no-collections-to-display"}}}</p>
        </div>
      </div>
    {{/each}}
  </div>
  {{#if showMoreResultsButton}}
    <span class="show-more-results" {{action 'showMoreResults'}}>{{t "common.show-more-results"}}</span>
  {{/if}}
</div>
