<div class="teacher-featured-courses">
  <div class="courses">
    {{#each courses as |course index|}}
      {{new-cards.gru-standard-card
        content=course
        profile=profile
        isCourse=true
        publishVisible=true
        featuresCourse=true
        onOpenContentPlayer="previewCourse"
        onOpenIndependentPlayer="playIndependentContent"
        onRemixCourse="remixCourse"
        onBookmarkContent="onBookmarkCourse"
      }}
    {{/each}}
  </div>
</div>
