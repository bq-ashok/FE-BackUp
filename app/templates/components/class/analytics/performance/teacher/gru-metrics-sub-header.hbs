 <div class="row">
{{#each visibleMetrics as |metric index|}}
  {{#if showReport}}
 <div class="{{if (and showReport (eq index 1) showReportTime) 'newreportPadding' ''}} {{if (and showReport (eq index 1) showStudyTime (not showReportTime)) 'reportPadding' ''}} {{if (or (and showReport (eq index 1)) (not showStudyTime)) 'pull-left' ''}} {{if (and (not showStudyTime) (eq metric.value 'score')) 'morepaddingleft' ''}} {{if (eq metric.value 'time-spent') 'pull-right paddingright' ''}} {{if (and showStudyTime (eq metric.value 'score')) 'pull-left paddingleft' ''}}">
    {{#if (eq index 1)}}
    <div class="metrics-sub-header report reportpad">
      <span class="metric-sub-header report">
            {{t 'gru-metrics-sub-header.report'}}
          </span>
    </div>
    {{/if}}
    {{#if metric.visible}}
    <div class="metrics-sub-header"  {{action 'sort' metric}}>
      <a class="metric-sub-header {{metric.value}} {{if showsort '' 'justLabels'}}">
        {{t (concat 'gru-metrics-sub-header.' metric.value) }}
      </a>
      {{#if showsort}}
      {{#if metric.sorted}}
        {{#if metric.isAsc}}
          <span>{{gru-icon name='arrow_upward'}}</span>
        {{else}}
          <span>{{gru-icon name='arrow_downward'}}</span>
        {{/if}}
      {{else}}
        <span>{{gru-icon name='swap_vert'}}</span>
      {{/if}}
      {{/if}}
    </div>
  {{/if}}
  </div>
  {{else}}
  {{#if metric.visible}}
    <div class="metrics-sub-header table-cell {{if (eq metric.value 'time-spent') 'pull-right paddingright' ''}} {{if (and showStudyTime (eq metric.value 'score')) 'pull-left paddingleft' ''}}"  {{action 'sort' metric}}>
      <a class="metric-sub-header {{metric.value}} {{if showsort '' 'justLabels'}}">
        {{t (concat 'gru-metrics-sub-header.' metric.value) }}
      </a>
      {{#if showsort}}
      {{#if metric.sorted}}
        {{#if metric.isAsc}}
          <span>{{gru-icon name='arrow_upward'}}</span>
        {{else}}
          <span>{{gru-icon name='arrow_downward'}}</span>
        {{/if}}
      {{else}}
        <span>{{gru-icon name='swap_vert'}}</span>
      {{/if}}
      {{/if}}
    </div>
  {{/if}}
  {{/if}}
{{/each}}
  </div>
